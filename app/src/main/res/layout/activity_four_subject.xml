<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Four_subject"
    android:orientation="vertical"
    android:background="@drawable/list_item_color"
    >

    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:background="@drawable/back"
        android:onClick="back"
        android:text="back" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="PROFIT"
        android:textColor="@color/white"
        android:textSize="30dp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="match_parent"
        android:layout_height="123dp"
        android:layout_marginTop="8dp"
        app:srcCompat="@drawable/prof" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_marginTop="8dp"

        android:text="To know what profit is, you must know these terms first:\n
1-	Revenue: it is the total amount of money generated by sales over a certain period.
Revenue = Price of a product * Number of units sold in a period.\n
2-	Total Costs: it is the sum of all costs to make the business work, and it is broken down into two types of costs:\n
a.	Fixed Costs: Its costs that are not related or affected by number of units produced, such as rent or managerial expenses.\n
b.	 Variable Costs: Its costs that change due to change in number of units produced, such as flour or gas bill for a bakery.
"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Total Costs = Fixed Costs + Variable Costs"
        android:textColor="#2292C5"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="8dp"
        android:text="Consequently, profit is considered to be the difference between revenue and total costs of the business, so you can think of it as the reward of the production process for the business.\n\n
"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:text="So, if you sell 50 glasses of lemonade in one day for $1 each, your revenue is $50. If your total costs (lemons, sugar, cups, and everything else) come to $30 for the day, here's how you figure out your profit:
"
        android:textColor="#4962EA"/>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Profit = $50 (Revenue) - $30 (Total Costs) = $20"
        android:textColor="#2292C5" />

    <TextView
        android:id="@+id/textView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="try to use : "
        android:textColor="#4962EA"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/revenue"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="#379FCF"
            android:ems="10"
            android:hint="Revenue"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#837676" />

        <TextView
            android:id="@+id/textView40"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="115"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:layout_marginStart="15dp"
            />

        <EditText
            android:id="@+id/totalcost"
            android:layout_width="108dp"
            android:layout_height="40dp"
            android:layout_weight="3"
            android:background="#379FCF"
            android:ems="10"
            android:hint="Total Costs"
            android:inputType="text"
            android:textColor="@color/white"
            android:textColorHint="#837676" />

        <Button
            android:id="@+id/equal"
            android:layout_width="54dp"
            android:layout_height="37dp"
            android:layout_marginStart="2dp"
            android:layout_weight="3"
            android:onClick="equal"
            android:text="=" />

        <TextView
            android:id="@+id/totalprofit"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="the profit"
            android:textColorHint="#837676"
            android:textColor="@color/white"
     android:textSize="20dp"
            android:layout_marginStart="13dp"
            />

    </LinearLayout>

</LinearLayout>