<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".six_subject"
    android:orientation="vertical"
    android:background="@drawable/list_item_color"
    >
    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:background="@drawable/back"
        android:onClick="back"
        android:text="back" />


    <TextView
        android:id="@+id/textView24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Characteristics of entrepreneurs:"
        android:layout_marginTop="8dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="30dp"
        />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="195dp"
        app:srcCompat="@drawable/asda" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="key traits that successful entrepreneurs often exhibit include:"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"


        />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="•	Innovativeness: Finding new ways to do things and solve problems."
        android:textColor="#047DBC"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="•	Risk-taking: Willingness to take calculated risks in pursuit of potential rewards"
        android:textColor="#047DBC"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="•	Persistence: Continuing to strive towards their goals, even when they face setbacks"
        android:textColor="#047DBC"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="•	Resilience: Bouncing back from failures and using them as learning opportunities."
        android:textColor="#047DBC"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="•	Vision: Having a clear idea of what they want to achieve and how to get there."
        android:textColor="#047DBC"
        android:layout_marginTop="8dp"

        />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="•	Adaptability: Being able to adjust plans based on feedback and changing circumstances"
        android:textColor="#047DBC"
        android:layout_marginTop="8dp"

        />


</LinearLayout>