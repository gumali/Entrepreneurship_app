<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".five_subject"
  android:orientation="vertical"
    android:background="@drawable/list_item_color"
    >
    <Button
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_gravity="left"
        android:background="@drawable/back"
        android:onClick="back"
        android:text="back" />


    <TextView
        android:id="@+id/textView18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4C’s"
        android:textColor="@color/white"
        android:layout_marginTop="8dp"
        android:textSize="30dp"
        android:gravity="center"
        />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        app:srcCompat="@drawable/ss" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:text="4C’s analysis is used in the business to guide the business where to focus exactly on:"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:text="• Customer: Understanding the needs, wants, and challenges of your target audience."
        android:textColor="#12754E"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/textView21"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="•	Cost: Not just the price, but the overall cost to the customer, which includes time, effort, and even the emotional cost."
        android:textColor="#12754E"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="match_parent"
        android:layout_height="71dp"
        android:text="•	Convenience: Making the purchase process as easy as possible, which can mean being where the customer already shops or making your product available online."
        android:layout_marginTop="8dp"
        android:textColor="#12754E"
        android:textSize="16dp"
        />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="match_parent"
        android:layout_height="81dp"
        android:layout_marginTop="8dp"
        android:text="•	Communication: Engaging in two-way communication with customers, listening to their feedback, and using that information to create better marketing strategies and products"
        android:textColor="#12754E"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textView39"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4C’s Analysis question:"
        android:textColor="@color/white"
        android:layout_marginTop="5dp"
        />

    <Button
        android:id="@+id/Q_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F3C0C0"
android:onClick="go"
        android:text="GO to quastion page " />

</LinearLayout>